@page
@model ProjectManager_Assignment.Pages.Project.IndexModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="stylesheet" href="/css/portal.css">
    <title>Alpha</title>
</head>
<body>
    <div class="wrapper">
        <section class="sidebar">
            <a class="logo" href="#"><img src="images/alpha-logo.svg" alt=""></a>

            <nav class="nav-links">
                <a class="active" href="#"><span>Projects</span></a>
            </nav>
        </section>

        <section class="top-bar">
            <button type="button" class="settings-icon" id="settingsTrigger">
                <img src="images/settings.svg" alt="Settings">
            </button>

            <div class="settings-popup" id="settingsPopup">
                <div class="user">
                    <i class="fa-solid fa-user-tie"></i>
                    <span>Johan An</span>
                </div>
                <button class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                </button>
            </div>


            <button class="avatar">
                <i class="fa-solid fa-user-tie"></i>
            </button>
        </section>

        <section class="main-content">
            <div class="header">
                <h2>Projects</h2>

                <button type="button" class="add-project-btn btn" data-bs-toggle="modal" data-bs-target="#addProjectModal">
                    + Add Project
                </button>
                <div class="modal fade" id="addProjectModal" tabindex="-1" aria-labelledby="addProjectModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2 class="modal-title" id="addProjectModalLabel">Add Project</h2>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="modal-project-logo">
                                    <img src="images/project-logo.svg" alt="Project Logo">
                                </div>
                                <!-- Form for adding a project -->
                                <form>
                                    <div class="mb-4">
                                        <label for="projectName" class="form-label">Project Name</label>
                                        <input type="text" class="form-control" id="projectName" placeholder="Project name" required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="clientName" class="form-label">Client Name</label>
                                        <input type="text" class="form-control" id="clientName" placeholder="Client name" required>
                                    </div>
                                    <div class="mb-4">
                                        <label for="description" class="form-label">Description</label>
                                        <textarea class="form-control" id="description" rows="3" placeholder="Enter project description" required></textarea>
                                    </div>
                                    <div class="project-date">
                                        <div class="mb-4">
                                            <label for="startDate" class="form-label">Start Date</label>
                                            <input type="date" class="form-control" id="startDate" required>
                                        </div>
                                        <div class="mb-4">
                                            <label for="endDate" class="form-label">End Date</label>
                                            <input type="date" class="form-control" id="endDate" required>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="budget" class="form-label">Budget</label>
                                        <div class="budget-box">
                                            <i class="fas fa-dollar-sign"></i>
                                            <input type="text" class="form-control" id="budget" placeholder="0" required>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <section class="projects-section">
                <div class="tabs">
                    <a class="active" href="#">ALL (0)</a>
                    <a href="#">STARTED (0)</a>
                    <a href="#">COMPLETED (0)</a>
                </div>
                <div class="projects">
                </div>
            </section>
        </section>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="js/portal-script.js"></script>
</body>
</html>