@page
@model ProjectManager_Assignment.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/auth.css">
    <title>Login</title>
</head>
<body>
    <div class="container">
        <h2>Login</h2>
        <form method="post" id="loginForm" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LoginForm.Email"></label>
                <input asp-for="LoginForm.Email" required>
                <span asp-validation-for="LoginForm.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginForm.Password"></label>
                <input asp-for="LoginForm.Password" required>
                <span asp-validation-for="LoginForm.Password" class="text-danger"></span>
            </div>
            <div class="terms">
                <input asp-for="LoginForm.RememberMe">
                <label asp-for="LoginForm.RememberMe"></label>
            </div>
            <button type="submit" class="btn btn-login-register">Log In</button>
            <p class="login-link">Don't have an account? <a asp-page="/Account/Register">Sign Up</a></p>
        </form>
    </div>

    <script src="~/js/validation.js"></script>
</body>
</html>