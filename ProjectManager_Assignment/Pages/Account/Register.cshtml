@page
@model ProjectManager_Assignment.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/auth.css">
    <title>Register</title>
</head>
<body>
    <div class="container">
        <h2>Create Account</h2>
        <form method="post" id="registerForm" novalidate>

            <div class="form-group">
                <label asp-for="RegisterForm.FullName"></label>
                <input asp-for="RegisterForm.FullName">
                <span asp-validation-for="RegisterForm.FullName"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegisterForm.Email"></label>
                <input asp-for="RegisterForm.Email">
                <span asp-validation-for="RegisterForm.Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegisterForm.Password"></label>
                <input asp-for="RegisterForm.Password">
                <span asp-validation-for="RegisterForm.Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegisterForm.ConfirmPassword"></label>
                <input asp-for="RegisterForm.ConfirmPassword">
                <span asp-validation-for="RegisterForm.ConfirmPassword"></span>
            </div>

            <div class="terms">
                <input asp-for="RegisterForm.AcceptTerms">
                <label asp-for="RegisterForm.AcceptTerms">I accept <a href="#">Terms and Conditions</a></label>
                <span asp-validation-for="RegisterForm.AcceptTerms"></span>
            </div>

            <button type="submit" class="btn btn-login-register">Create Account</button>
            <p class="login-link">Already have an account? <a asp-page="/Account/Login">Login</a></p>
        </form>
    </div>

    <script src="~/js/validation.js"></script>
</body>
</html>
